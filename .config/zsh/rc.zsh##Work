ZDOT_DIR="${HOME}/.config/zsh"

source "${ZDOT_DIR}/tmux.zsh"
source "${ZDOT_DIR}/zplug.zsh"
source "${ZDOT_DIR}/ohmy.zsh"

# Give the option to add work specific stuff 
# Push this higher up so we can alter python path and the like
if [ -e "${ZDOT_DIR}/work.zsh" ]; then 
    source "${ZDOT_DIR}/work.zsh"
fi
source "${ZDOT_DIR}/aliases.zsh"
source "${ZDOT_DIR}/py_venv.zsh"
source "${ZDOT_DIR}/env_vars.zsh"
source "${ZDOT_DIR}/functions.zsh"

zplug load
