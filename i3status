general {
    output_format = 'i3bar'
    colors = true
    interval = 5
}

order += "disk /"
order += "ethernet eth0"
order += "load"
order += "tztime local"

disk "/" {
    format = "%free"
}

ethernet eth0 {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

load {
    format = "%5min"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S %Z"
}
